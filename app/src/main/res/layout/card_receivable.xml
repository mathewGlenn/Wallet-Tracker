<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vAccountColor"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    android:layout_marginHorizontal="22dp"
    android:layout_marginTop="11dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="#FDFDFF"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/receiName"
                style="@style/textStyleDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan dela Cruz"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/receiDate"
                style="@style/textStyleDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Nov 23, 2022"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/receiAmount"
            style="@style/textStyleDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.00"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/receiDescription"
            style="@style/textStyleDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor"
            android:textSize="11sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>